<!DOCTYPE html>
<html>
	<head>
		<title><% title %></title>

		<link rel='stylesheet' href="/Semantic-UI-CSS-master/semantic.min.css" />
		<script src='/javascripts/jquery-3.4.1.min.js'></script>
		<script src='/Semantic-UI-CSS-master/semantic.min.js'></script>

		<link rel='stylesheet' href='/stylesheets/style.css' />
		<script src="/javascripts/menu.js"></script>
	</head>
	<body class="uninverted">
        <% include menu.ejs %>
        <div class="ui space container">
            <div class="ui uninverted segment" style="margin: 30px auto; max-width: 300px;">
                <form action="/login" method="post" class="ui uninverted form error">
                    <% if (message.length > 0) { %>
                        <div class="ui error message">
                            <p><%= message %></p>
                        </div>
                    <% }; %>
                    <div class="field">
                        <label for="id">아이디</label>
                        <div class="ui left icon input">
                            <i class="user icon"></i>
                            <input type="text" placeholder="아이디" name="id" id="id">
                        </div>
                    </div>
                    <div class="field">
                        <label for="password">비밀번호</label>
                        <div class="ui uninverted left icon input">
                            <i class="lock icon"></i>
                            <input type="password" placeholder="비밀번호" class="uninverted" name="password" id="password">
                        </div>
                    </div>
                    <input type="submit" title="로그인" value="로그인" class="ui fluid primary button">
                </form>
                <div style="padding-top: 10px; text-align: center">
                    <a href="/find_password">비밀번호가 기억나지 않습니다</a>
                </div>
            </div>
        </div>
	</body>
</html>
